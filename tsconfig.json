{
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    
    // Configurations React/JSX
    "jsx": "react-jsx", // ðŸ‘ˆ Crucial: Active le support JSX de React
    "allowJs": true,    // ðŸ‘ˆ Permet l'inclusion de fichiers .js et .jsx
    "resolveJsonModule": true, // Permet l'importation de fichiers .json
    "noEmit": true, // Ne pas gÃ©nÃ©rer de fichiers JS (laisse Webpack/Vite s'en charger)
    
    // Assurez-vous que les modules sont bien rÃ©solus
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    
    // Chemin de base pour les modules
    "baseUrl": "." 
  },
  
  // ðŸ‘ˆ Inclure les extensions de fichiers nÃ©cessaires Ã  la compilation
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  
  "exclude": [
    "node_modules"
  ]
}